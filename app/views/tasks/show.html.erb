<h1><%= @task.title %></h1>

<%= link_to "Edit this task", edit_task_path %>

<div class="alert alert-light" role="alert">
  <%= @task.details %>
</div>

<div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" <%= @task.completed ? "checked" : "" %>>
  <label class="form-check-label" for="flexCheckChecked">
    This task is <%= @task.completed ? "completed" : "not completed yet" %>
  </label>
</div>

<%= link_to "Back to list", tasks_path %>
